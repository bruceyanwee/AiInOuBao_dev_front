			},
			{
				"pagePath":"pages/chat/chat",
				"text":"小瓯解惑",
				"iconPath":"static/tabBar/zixun.png",
				"selectedIconPath":"static/tabBar/zixun_s.png"
			},
			{
				"pagePath":"pages/me/me",
				"text":"个人中心",
				"iconPath":"static/tabBar/icon_me.png",
				"selectedIconPath":"static/tabBar/icon_me_selected.png"
			}
		]
	}
